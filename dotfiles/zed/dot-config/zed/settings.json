// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://192.168.1.92:11434"
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "dock": "right",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "cursor_blink": false,
  "scroll_beyond_last_line": "off",
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  // disable auto indent on paste (matching your VS Code preference)
  "auto_indent_on_paste": false,

  "message_editor": {
    "gutter": {
      "line_numbers": false,
      "folds": true
    }
  },
  "gutter": {
    "line_numbers": true
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },

  // Font and UI settings based on your VS Code config
  "preferred_line_length": 80,
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "buffer_font_family": "Fira Code",
  // Ligatures check:
  // -<< -< -<- <-- <--- <<- <- -> ->> --> ---> ->- >- >>-
  // =<< =< =<= <== <=== <<= <= => =>> ==> ===> =>= >= >>=
  // <-> <--> <---> <----> <=> <==> <===> <====> :: ::: __
  // <~~ </ </> /> ~~> == != /= ~= <> === !== !=== =/= =!=
  // <: := *= *+ <* <*> *> <| <|> |> <. <.> .> +* =* =: :>
  // (* *) /* */ [| |] {| |} ++ +++ \/ /\ |- -| <!-- <!---

  "terminal": {
    "font_family": "Fira Code",
    "font_size": 12,
    "blinking": "on",
    "line_height": "standard"
  },

  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Ayu Dark"
  },

  // Tab and indentation settings from your VS Code
  "tab_size": 2,
  "hard_tabs": false,
  "show_whitespaces": "all", // Similar to your renderWhitespace setting
  "show_wrap_guides": true,
  "wrap_guides": [80, 100, 120], // Your VS Code rulers

  // File handling
  "ensure_final_newline_on_save": true, // Like your VS Code insertFinalNewline
  "remove_trailing_whitespace_on_save": true, // Like your VS Code trimTrailingWhitespace

  "languages": {
    "JavaScript": {
      "format_on_save": "off",
      "tab_size": 2
    },
    "TypeScript": {
      "format_on_save": "off",
      "tab_size": 2
    },
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "tab_size": 4 // Python standard
    },
    "Terraform": {
      "formatter": {
        "external": {
          "command": "terraform",
          "arguments": ["fmt", "-"]
        }
      },
      "format_on_save": "on",
      "tab_size": 2
    },
    "HCL": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "Shell Script": {
      "tab_size": 2
    },
    "YAML": {
      "auto_indent_on_paste": false,
      "formatter": "language_server",
      "tab_size": 2,
      "format_on_save": "off"
    },
    "Helm": {
      "auto_indent_on_paste": false,
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    },
    "Scala": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "Jsonnet": {
      "format_on_save": "on",
      "tab_size": 2
    }
  }
}
