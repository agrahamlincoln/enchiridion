// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "notionMCP": {
      "source": "extension",
      "enabled": false,
      "settings": {}
    },
    "grafana-dev": {
      "source": "extension",
      "enabled": false,
      "settings": {}
    },
    "grafana-production": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    },
    "grafana-staging": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    },
    "notion": {
      "source": "extension",
      "enabled": false,
      "settings": {}
    },
    "atlassian": {
      "enabled": false,
      "source": "custom",
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.atlassian.com/v1/sse"],
      "env": {}
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://192.168.1.92:11434"
    },
    "bedrock": {
      "authentication_method": "named_profile",
      "region": "us-east-1",
      "profile": "machinify-dev"
    }
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "favorite_models": [],
    "model_parameters": []
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "cursor_blink": false,
  "scroll_beyond_last_line": "off",
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  // disable auto indent on paste (matching your VS Code preference)
  "auto_indent_on_paste": false,
  "project_panel": {
    "auto_fold_dirs": true
  },
  "gutter": {
    "line_numbers": true,
    "folds": true
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },

  // LSP configuration for YAML language server
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "validate": true,
          "customTags": ["!Ref", "!Sub", "!GetAtt", "!Join"]
        }
      }
    },
    "metals": {
      "settings": {
        "javaHome": "/opt/homebrew/opt/openjdk@17/libexec/openjdk.jdk/Contents/Home"
      },
      "binary": {
        "arguments": ["-Dmetals.http=on"]
      },
      "initialization_options": {
        "isHttpEnabled": true
      }
    }
  },

  // File type associations - treat Helm chart files as Helm templates
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/values*.yaml",
      "**/values*.yml",
      "**/helm/**/*.yaml",
      "**/helm/**/*.yml"
    ]
  },

  // Font and UI settings based on your VS Code config
  "preferred_line_length": 80,
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "buffer_font_family": "Fira Code",
  "buffer_font_fallbacks": ["Noto Color Emoji"],
  // Ligatures check:
  // -<< -< -<- <-- <--- <<- <- -> ->> --> ---> ->- >- >>-
  // =<< =< =<= <== <=== <<= <= => =>> ==> ===> =>= >= >>=
  // <-> <--> <---> <----> <=> <==> <===> <====> :: ::: __
  // <~~ </ </> /> ~~> == != /= ~= <> === !== !=== =/= =!=
  // <: := *= *+ <* <*> *> <| <|> |> <. <.> .> +* =* =: :>
  // (* *) /* */ [| |] {| |} ++ +++ \/ /\ |- -| <!-- <!---

  "terminal": {
    "font_family": "Fira Code",
    "font_fallbacks": ["Noto Color Emoji"],
    "font_size": 12,
    "blinking": "on",
    "line_height": "standard"
  },

  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Average Pure Black - Adjusted"
  },

  // Tab and indentation settings from your VS Code
  "tab_size": 2,
  "hard_tabs": false,
  "show_whitespaces": "all", // Similar to your renderWhitespace setting
  "show_wrap_guides": true,
  "wrap_guides": [80, 100, 120], // Your VS Code rulers

  // File handling
  "ensure_final_newline_on_save": true, // Like your VS Code insertFinalNewline
  "remove_trailing_whitespace_on_save": true, // Like your VS Code trimTrailingWhitespace

  "languages": {
    "JavaScript": {
      "format_on_save": "off",
      "tab_size": 2
    },
    "Starlark": {
      "language_servers": ["starwhale-lsp"],
      "format_on_save": "on"
    },
    "TypeScript": {
      "format_on_save": "off",
      "tab_size": 2
    },
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": {
        "code_actions": [
          {
            "code_action": "source.organizeImports.ruff"
          },
          {
            "code_action": "source.fixAll.ruff"
          }
        ],
        "language_server": {
          "name": "ruff"
        }
      },
      "tab_size": 4 // Python standard
    },
    "Shell Script": {
      "tab_size": 2
    },
    "YAML": {
      "auto_indent_on_paste": false,
      "formatter": "language_server",
      "tab_size": 2,
      "format_on_save": "off",
      "language_servers": ["yaml-language-server", "!taplo"],
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll": true
      }
    },
    "Helm": {
      "auto_indent_on_paste": false,
      "tab_size": 2,
      "enable_language_server": true,
      "language_servers": ["helm-ls"]
    },
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    },
    "Scala": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "Jsonnet": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "Markdown": {
      "preferred_line_length": 100,
      "soft_wrap": "preferred_line_length"
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true
  }
}
